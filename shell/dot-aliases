# GENERAL
alias v="nvim"
alias vi="nvim"
alias vim="nvim"
alias ovim="/usr/bin/vim"
alias nakedvim="vim -u NONE -N"
alias g="git"
alias c='clear'
alias cp="cp -i"      # confirm before overwriting something
alias df='df -h'      # human-readable sizes
alias free='free -m'  # show sizes in MB
alias more=less

# lsd
alias ls='lsd'
alias l='ls -l'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'

# nnn
alias nnn='nnn -e' # open files in terminal

# Git
alias gs='git status '
alias gss='git status -s'
alias ga='git add '
alias gb='git branch '
alias gc='git commit -m'
alias gd='git diff'
alias gds='dif diff --staged'
#alias go='git checkout '
alias gk='gitk --all&'
alias gx='gitx --all'

alias got='git '
alias get='git '

alias lg='lazygit'


# APPS
alias tldr='tldr -t ocean'
alias du="ncdu --color dark -rr -x --exclude .git --exclude node_modules"

# Other

alias rs='source ~/.bashrc'

# Aliases only fo Linux
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
  alias copy='xclip -selection clipboard -r'
  alias copy-ssh="cat ~/.ssh/id_rsa.pub | xclip -sel clip"
  alias kb='cd /home/roman/Lab/Knowledge-base && book sm g && cd ../GitBook && gitbook serve --browser=firefox --open'
fi
